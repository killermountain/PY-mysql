        {
            "data": {
                "is_heading": 1,
                "prefix": 8.0,
                "text": "Approval and implementation"
            },
            "type": "ListItem",
            "sequence_num": 75
        },
        {
            "data": {
                "is_heading": 0,
                "prefix": 8.1,
