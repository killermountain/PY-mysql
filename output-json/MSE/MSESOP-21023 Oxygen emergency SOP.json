            }
        },
        {
            "data": {
                "is_heading": 0,
                "text": "minute."
            },
            "type": "ListItem",
            "sequence_num": 42
        },
        {
            "data": {
                "is_heading": 0,
                "text": "3.2.1  The remote telemetry is accessed via:"
            },
            "type": "ListItem",
            "sequence_num": 43
        },
